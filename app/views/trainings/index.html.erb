<%= render "shared/header" %>

<div class="main">
    <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <%#Googleへの遷移%>
    <div class="list_training">
      <%= link_to image_tag("google_logo.png", class:"youtube-icon"), "/"%>
  <%#Googleへの遷移%>
      <%= link_to image_tag("training_logo2.png", class:"youtube-icon"), "/"%>
    </div>
    <div class="list_name">
    <a href="https://www.google.com/">Googleを開く</a>
      <%= link_to '今日のトレーニングを投稿する', new_training_path, class: "training_text" %>
    </div>

    <div class='trainings-contents'>
        <h2 class='title'>投稿一覧</h2>
        <div class="training-lists">
            <% @training.each do |training| %>
                <div class="list">
                    <%= link_to  training_path(training) do %>
                        <div class='item-info'>
                            <h3 class='item-name'>
                                <%= training.training_title %>
                            </h3>
                            <div class="time">
                                <%= training.training_time %>
                            </div>
                            <div class="text">
                                <%= training.training_text%>
                            </div>
                            <div class="nickname">
                               <span>投稿者</span> <%= training.user.nickname %>
                            </div>
                            <div>
                                <span>時刻</span><%= l training.created_at %>
                            </div>
                        </div>
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>
    
</div>